<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <!--
        Context, View 등 객체를 사용 할 때에는
        <data> 태그 안에 객체를 import 해줘야한다. -->
        <variable
            name="searchVM"
            type="com.universeindustry.retrofit2json.ui.fragments.search.SearchVM" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:id="@+id/card"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:src="@drawable/jaeyook">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="@string/rallo_card_text"
                android:textSize="20sp"
                android:textStyle="italic|bold"
                android:textColor="@color/luxury_blueGold"
                android:fontFamily="@font/chosun_gs"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:id="@+id/reward"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/rallo_reward_text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/chosun_gs"/>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/button"
            android:layout_below="@id/card"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_all_radius"
            android:padding="10dp"
            android:gravity="center|start"
            android:text="@{searchVM._currentText}"
            android:textSize="20sp"
            android:inputType="text"
            android:fontFamily="@font/bm_euljiro"
            android:hint="@string/rallo_quote1"
            android:drawableTint="@color/white"
            android:autofillHints="@string/imageLoading"/>
        <include
            layout="@layout/layout_button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:id="@+id/button"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/button"
            android:id="@+id/recyclerview"/>
    </RelativeLayout>
</layout>

